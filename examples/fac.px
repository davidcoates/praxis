
-- FIXME move operators to prelude

operator (_ - _) = subtract

operator (_ * _) = multiply where
  precedence above (_ - _)

operator (_ . _) = compose where
  associates right

fac : Int -> Int
fac = cases
  0 -> 1
  n -> n * fac (n - 1)

main : () -> ()
main () = do
  putStrLn "Enter a number:"
  let x = getInt ()
  putInt (fac x)

-- Without prompts
main' : () -> ()
main' = putInt . fac . getInt

