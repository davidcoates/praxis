
operator (_ + _) = add

operator (_ - _) = subtract where
  associates left
  precedence equal (_ + _)

operator (_ * _) = multiply where
  associates left
  precedence above (_ + _)

-- FIXME broken
operator (- _) = negate where
  precedence above (_ * _)

